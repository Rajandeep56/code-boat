
import static java.lang.System.out;
import java.util.*;
/**
 *
 * @author rajan
 */
public class EX1 {
    /*(Game: add three numbers) The program in Listing 3.1, AdditionQuiz.java, generates
two integers and prompts the user to enter the sum of these two integers.
Revise the program to generate three single-digit integers and prompt the user to
enter the sum of these three integers.*/

    public static void main(String[] args) throws Exception   {
    Scanner sc = new Scanner(System.in);
    int integer1 = (int) (Math.random()*10);
    int integer2 = (int) (Math.random() * 10);
    
    int sum = integer1+integer2;
    System.out.println("number 1 = "+integer1+" "+ "number 2 = "+ integer2);
   
    System.out.println("please enter the sum of displayed number");
     int input = sc.nextInt();
   if (input == sum)
    {
     System.out.print("you answer is correct");
    }
    else 
        System.out.println("you are wrong");
    
    
}}
